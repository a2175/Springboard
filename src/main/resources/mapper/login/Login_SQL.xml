<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="first.login.mapper.LoginMapper">

	<select id="selectUserByIdAndPassword" parameterType="hashmap" resultType="first.login.vo.UserVO">
    	<![CDATA[
        	SELECT
            	*
        	FROM
            	tb_user
        	WHERE
            	ID = #{id}
            	AND PASSWORD = #{password}
    	]]>
	</select>
	
	<select id="selectUserById" parameterType="hashmap" resultType="first.login.vo.UserVO">
    	<![CDATA[
        	SELECT
            	*
        	FROM
            	tb_user
        	WHERE
            	ID = #{id}
    	]]>
	</select>
	
	<select id="selectUserByNickname" parameterType="hashmap" resultType="first.login.vo.UserVO">
    	<![CDATA[
        	SELECT
            	*
        	FROM
            	tb_user
        	WHERE
            	NICKNAME = #{nickname}
    	]]>
	</select>
	
	<select id="selectNicknameById" resultType="String">
		<![CDATA[
	     	SELECT
				nickname
			FROM 
				tb_user
			WHERE
	         	ID = #{crea_id}
		]]>
	</select>
	
	<insert id="insertUser" parameterType="hashmap">
    	<![CDATA[
        	INSERT INTO tb_user
			(
 				ID,
 				PASSWORD,
 				NICKNAME,
 				EMAIL
			)
			VALUES
			(
    			#{id},
    			#{password},
    			#{nickname},
    			#{email}
			)
    	]]>
	</insert>
	
